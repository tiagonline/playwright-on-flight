{
  "author": "Tiago Silva",
  "description": "Projeto de Automação Full Stack (Web & API) focado em Arquitetura Sênior.",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "dotenv": "^16.6.1",
    "eslint": "^8.57.1",
    "newman": "^6.2.1",
    "newman-reporter-htmlextra": "^1.23.1",
    "prettier": "^3.6.2"
  },
  "license": "ISC",
  "main": "index.js",
  "name": "playwright-on-flight",
  "scripts": {
    "postinstall": "npx playwright install --with-deps",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:api": "newman run tests/api/GoRest_CRUD.postman_collection.json -e tests/api/GoRest_Env.postman_environment.json --reporters cli,htmlextra",
    "format": "prettier --write \"**/*.{ts,js,json,yml,md}\"",
    "lint": "eslint . --ext .ts",
    "ci": "npm run format && npm run lint && npm run test"
  },
  "keywords": [
    "playwright",
    "e2e",
    "BDD",
    "CI/CD",
    "Automation"
  ],
  "type": "commonjs",
  "version": "1.0.1-senior"
}